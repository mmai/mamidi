{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Repas de {{ host.username }}</h1>
    <table class="records_list table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Entr√©e</th>
            <th>Plat</th>
            <th>Dessert</th>
            <th>Nombre de convives</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{% if entity.time %}{{ entity.time|date('l d F H:i') }}{% endif %}</td>
                <td>{{ entity.starter }}</td>
                <td>{{ entity.maincourse }}</td>
                <td>{{ entity.dessert }}</td>
                <td>{{ entity.numberOfGuests }}</td>
                <td>
                    <a href="{{ path('meal_show', { 'id': entity.id }) }}">voir</a>
                    {% if isCurrentHost %}
                        <a href="{{ path('meal_edit', { 'id': entity.id }) }}">modifier</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% if isCurrentHost %}
    <a href="{{ path('meal_new') }}" class="btn btn-primary">
        Ajouter un repas
    </a>
{% endif %}
{% endblock %}
